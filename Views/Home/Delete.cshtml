@model Product
@{
	ViewData["Title"] = "Delete Product";
}

<div class="d-flex justify-content-center">
	<form asp-action="Delete" method="post">
		<div class=" alert alert-dismissible alert-info ">
			<h4 class=" alert-heading text-warning">Warning!</h4>
			<p class="mb-0"><strong class="text-danger">Are you sure ?!</strong> &nbsp; &nbsp; Do you want to delete
				<strong>
					@Model.Name
				</strong>
				Product?
			</p>
			<br>
			<div class="d-flex justify-content-between align-items-center">
				<input type="submit" value="Delete" class="btn btn-danger">
				<a class="text-primary text-capitalize" asp-controller="Home" asp-action="Index">
					back to products
				</a>
			</div>
		</div>
	</form>
</div>