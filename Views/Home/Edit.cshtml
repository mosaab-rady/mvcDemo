@model Product
@{
	ViewData["Title"] = "Edit Product";
}


<div class="d-flex justify-content-center">
	 <div class="col-md-4">
        <form method="post"  asp-action="Edit" >
        <legend class="text-primary">Edit Product</legend>
            <div class="form-group mt-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" type="number" min="1" max="1000" class="form-control" />
                <span  asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type"  class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Summary" class="control-label"></label>
                <textarea  asp-for="Summary" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div  class="form-group mt-2 d-flex align-items-center justify-content-between ">
                <input type="submit" value="Edit" class="btn btn-primary" />
                <a class="text-info text-capitalize" asp-controller="Home" asp-action="Index" >
			    			back to products
		       			 </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
