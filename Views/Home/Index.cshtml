@model IEnumerable<Product>
@{
    ViewData["Title"] = "All Products";
}

<div class="d-flex justify-content-center">
   <div class="col-8" >
    <div class="d-flex flex-row justify-content-between align-items-center">
       <div>
         <h2>Products</h2>
       </div>
       <div class="col-6 text-end">
            <a class="btn btn-success" asp-controller="Home" asp-action="Create" ><i class="bi bi-plus-circle"></i>&nbsp; Create New Product </a>
       </div>
    </div>
    <table class="table table-hover table-striped">
        <thead>
            <tr class="table-dark">
                <th>Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {   
                <tr class="table-active">
                    <th width="40%" >@item.Name</th>
                    <td width="20%">$ @item.Price</td>
                    <td  class="w-100 btn-group" role="group" >
                        <a class="btn btn-info btn-sm " asp-controller="Home" asp-action="Product" asp-route-id="@item.Id" ><i class="bi bi-arrow-up-right-square"></i>&nbsp; Details</a>
                        <a class="btn btn-primary btn-sm " asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" ><i class="bi bi-pencil-square"></i>&nbsp; Edit</a>
                        <a class="btn btn-danger " asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i>&nbsp; Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
   </div>
</div>
